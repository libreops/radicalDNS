# {{ ansible_managed }}
allow-from=127.0.0.0/8
etc-hosts-file=/etc/powerdns/hosts.txt
export-etc-hosts=on
config-dir=/etc/powerdns
hint-file=/etc/powerdns/root.hints
local-address=127.0.0.1
edns-padding-from=127.0.0.1
dnssec=process-no-validate
quiet=yes
setgid=pdns
setuid=pdns
lua-dns-script=/etc/powerdns/pdns.lua
local-port=5353
any-to-tcp=no
version-string=Powered by LibreOps
auth-zones={% for tld in opennic_tlds %}{{ tld }}=/etc/powerdns/zones.d/{{ tld }}.conf{% if not loop.last %},{% endif %}{% endfor %}
